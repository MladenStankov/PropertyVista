{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throws-on-extras",
  "controllerPathGlobs": [
    "src/controllers/**/*.ts"
  ],
    "spec": {
      "outputDirectory": "public",
      "specVersion": 3
    },
    "securityDefinitions": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "jwt"
      }
    },
    "routes": {
      "routesDir": "src/routes",
      "authenticationModule": "./src/middleware/auth.middleware.ts"
    }
  }